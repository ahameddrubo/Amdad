<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 800 600" width="800" height="600">
  <defs>
    <radialGradient id="plateGradient" cx="50%" cy="50%" r="50%">
      <stop offset="0%" style="stop-color:#f4f4f4;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#e8e8e8;stop-opacity:1" />
    </radialGradient>
    <radialGradient id="riceGradient" cx="50%" cy="50%" r="50%">
      <stop offset="0%" style="stop-color:#fff8dc;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#f5deb3;stop-opacity:1" />
    </radialGradient>
    <linearGradient id="meatGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#8b4513;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#a0522d;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect x="0" y="0" width="800" height="600" fill="#2c1810"/>
  
  <!-- Table surface -->
  <rect x="0" y="400" width="800" height="200" fill="#3d2914" opacity="0.8"/>
  
  <!-- Plate -->
  <ellipse cx="400" cy="350" rx="200" ry="120" fill="url(#plateGradient)" opacity="0.9"/>
  
  <!-- Rice base -->
  <ellipse cx="400" cy="340" rx="180" ry="100" fill="url(#riceGradient)"/>
  
  <!-- Rice texture -->
  <g opacity="0.7">
    <ellipse cx="380" cy="330" rx="5" ry="2" fill="#ffffff"/>
    <ellipse cx="420" cy="335" rx="4" ry="2" fill="#ffffff"/>
    <ellipse cx="350" cy="345" rx="3" ry="2" fill="#ffffff"/>
    <ellipse cx="450" cy="350" rx="4" ry="2" fill="#ffffff"/>
    <ellipse cx="400" cy="320" rx="3" ry="2" fill="#ffffff"/>
  </g>
  
  <!-- Meat pieces -->
  <ellipse cx="380" cy="300" rx="25" ry="15" fill="url(#meatGradient)"/>
  <ellipse cx="420" cy="310" rx="20" ry="12" fill="url(#meatGradient)"/>
  <ellipse cx="350" cy="320" rx="18" ry="10" fill="url(#meatGradient)"/>
  
  <!-- Saffron strands -->
  <g stroke="#d4af37" stroke-width="1" fill="none" opacity="0.8">
    <path d="M370 315 Q375 310 380 315"/>
    <path d="M410 325 Q415 320 420 325"/>
    <path d="M390 305 Q395 300 400 305"/>
  </g>
  
  <!-- Garnish -->
  <circle cx="360" cy="310" r="3" fill="#228b22" opacity="0.7"/>
  <circle cx="440" cy="320" r="2" fill="#228b22" opacity="0.7"/>
  
  <!-- Steam effect -->
  <g opacity="0.3" stroke="#ffffff" stroke-width="1" fill="none">
    <path d="M350 280 Q355 270 350 260 Q345 250 350 240">
      <animate attributeName="opacity" values="0.3;0.1;0.3" dur="3s" repeatCount="indefinite"/>
    </path>
    <path d="M400 275 Q405 265 400 255 Q395 245 400 235">
      <animate attributeName="opacity" values="0.1;0.3;0.1" dur="2.5s" repeatCount="indefinite"/>
    </path>
    <path d="M450 285 Q455 275 450 265 Q445 255 450 245">
      <animate attributeName="opacity" values="0.2;0.4;0.2" dur="3.5s" repeatCount="indefinite"/>
    </path>
  </g>
</svg>